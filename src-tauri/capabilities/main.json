{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Capability for the main window",
  "local": true,
  "windows": [
    "main","player"
  ],
  "permissions": [
    "window:default",
    "window:allow-center",
    "window:allow-maximize",
    "window:allow-minimize",
    "window:allow-close",
    "window:allow-start-dragging",
    "window:allow-toggle-maximize",
    "event:default",
    "event:allow-emit",
    "event:allow-listen",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load"
  ]
}